<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_4"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="35sp" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter your full name"
            android:textSize="16dp"
            android:inputType="text" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter your username"
            android:textSize="16dp"
            android:inputType="text" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter your email address"
            android:textSize="16dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter your password"
            android:textSize="16dp"
            android:inputType="textPassword" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginHorizontal="5dp"
            android:hint="Enter your password once again"
            android:textSize="16dp"
            android:inputType="textPassword" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroup"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:fontFamily="@font/nunito_sans_semibold"
                android:checked="true"
                android:layout_marginEnd="100dp"/>

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Female"
                android:fontFamily="@font/nunito_sans_semibold"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="On the scale of 0-100, how much do you like to read?"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/valueInterest"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="0%" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Favorite Category (min.1)"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/checkLifestyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifestyle"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science and Technology"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkFiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiction"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkBiography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkMotivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivation and Self Help"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business and Investing"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children Books"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <CheckBox
            android:id="@+id/checkOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:fontFamily="@font/nunito_sans_semibold"/>

        <Button
            android:id="@+id/btnLetsgo"
            android:layout_marginTop="15dp"
            android:layout_width="365dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Let's Go!"
            android:textSize="16dp"
            android:fontFamily="@font/nunito_sans"/>

    </LinearLayout>
</ScrollView>